<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="?colorSecondary"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="Настройки" />

    <View
        android:layout_width="160dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_height="2dp"
        android:background="?colorOnSecondary"/>

    <TextView
        android:id="@+id/settings_rooms"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:textColor="?colorSecondary"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Количество\nкомнат:" />

    <EditText
        android:id="@+id/settings_rooms_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginStart="150dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"/>

    <TextView
        android:id="@+id/infoLabel"
        android:layout_width="wrap_content"
        android:layout_marginStart="250dp"
        android:textColor="?colorOnSecondary"
        android:textSize="14sp"
        android:textAlignment="textEnd"
        android:layout_height="wrap_content"
        android:text="Moteldon\nСоздатель: UlkaPulka\nВерсия: 1.0.0" />

    <Button
        android:id="@+id/settings_save_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginStart="130dp"
        android:text="Сохранить" />

    <Button
        android:id="@+id/delete_data_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginStart="130dp"
        android:text="Удалить все данные" />

</FrameLayout>